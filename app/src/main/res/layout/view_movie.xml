<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivMovieCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/movie_test"
        android:adjustViewBounds="true"
        app:layout_constraintDimensionRatio="H,3:1"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:orientation="vertical"
        android:background="#D9212121"
        android:layout_width="166dp"
        android:gravity="center"
        android:layout_marginTop="-20dp"
        android:layout_alignBottom="@id/ivMovieCover"
        android:layout_alignStart="@id/ivMovieCover"
        android:layout_alignEnd="@id/ivMovieCover"
        android:layout_height="64dp">

        <TextView
            android:id="@+id/tvMovieTitle"
            tools:text="Zootopia"
            android:textStyle="bold"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/material_gray_50"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvMovieYear"
            tools:text="2017"
            android:textSize="14sp"
            android:textColor="@color/material_gray_400"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>